<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NormalTitleText">
        <item name="android:textColor">#3D3D3D</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ali_puhui_regular</item>
    </style>

    <style name="TRM_ANIM_STYLE">
        <item name="android:windowEnterAnimation">@anim/trm_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/trm_popup_exit</item>
    </style>

    <style name="FORM_PAGE_CLASS">
        <item name="android:textColor">@color/default_black</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/ali_puhui_heavy</item>
    </style>

    <style name="FORM_PAGE_TITLE">
        <item name="android:textColor">@color/default_black</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/ali_puhui_regular</item>
    </style>

    <style name="FORM_PAGE_SUB_TITLE">
        <item name="android:textColor">@color/default_black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ali_puhui_regular</item>
    </style>

    <style name="TASK_EDIT_OPEN_LEVEL_RADIO">
        <item name="android:textColor">@color/default_black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ali_puhui_regular</item>
    </style>

    <style name="USER_INFO_TITLE">
        <item name="android:textColor">@color/default_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ali_puhui_bold</item>
    </style>

    <style name="TASK_INFO_PAGE_TITLE">
        <item name="android:textColor">@color/default_black</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/ali_puhui_bold</item>
    </style>

    <style name="TASK_INFO_PAGE_CONTENT">
        <item name="android:textColor">@color/default_black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ali_puhui_regular</item>
    </style>


    <style name="BottomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@style/BottomDialog.AnimationStyle</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="BottomDialog.AnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <style name="defaultSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:backgroundTint">@color/default_white</item>
        <item name="android:textColor">@color/black_gray</item>
        <item name="backgroundColor">@color/light_gray</item>
        <item name="paddingStart">10dp</item>
    </style>


</resources>