<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg"
    android:paddingStart="15dp"
    android:paddingTop="10dp"
    android:paddingEnd="15dp">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/task_submit_record_user_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/test_user_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:round="25dp" />

    <TextView
        android:id="@+id/task_submit_record_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/ali_puhui_regular"
        android:textColor="@color/black_gray"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/task_submit_record_user_avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="test_user_name" />

    <TextView
        android:id="@+id/task_submit_record_submit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/ali_puhui_regular"
        android:textColor="@color/black_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/task_submit_record_user_avatar"
        app:layout_constraintStart_toEndOf="@+id/task_submit_record_user_avatar"
        tools:text="2024年09月01日 12:00" />

    <TextView
        android:id="@+id/textView121"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/ali_puhui_regular"
        android:text="标注数据量"
        android:textColor="@color/black_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/task_submit_record_submit_time"
        app:layout_constraintStart_toEndOf="@+id/task_submit_record_submit_time"
        app:layout_constraintTop_toTopOf="@+id/task_submit_record_submit_time" />

    <TextView
        android:id="@+id/task_submit_record_complete_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ali_puhui_regular"
        android:textColor="@color/black_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/task_submit_record_submit_time"
        app:layout_constraintStart_toEndOf="@+id/textView121"
        app:layout_constraintTop_toTopOf="@+id/task_submit_record_submit_time"
        tools:text="10000(10%)" />

    <TextView
        android:id="@+id/task_submit_record_audit_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ali_puhui_regular"
        android:textColor="@color/black_gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="已审核" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/task_submit_record_audit_status_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/common_allow_green"
        app:layout_constraintBottom_toBottomOf="@+id/task_submit_record_user_name"
        app:layout_constraintEnd_toStartOf="@+id/task_submit_record_audit_status"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>